<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dtesTe"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        tools:context="com.barswipe.SecondActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/crotuon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableRight="@mipmap/ic_arrow_drop_down_black_24dp"
                android:text="Crouton"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/bottomLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_rank_desc_renqi" />
        </LinearLayout>

        <Button
            android:id="@+id/Fourth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Fourth"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/webView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Fourth"
            android:text="webView"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/dsdsd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/webView"
            android:background="@drawable/triangle"
            android:padding="15dp"
            android:rotation="-45"
            android:text="-30%" />

        <Button
            android:id="@+id/startScrooller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scroller的学习"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/startProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品详情学习"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/studyEaseAnimation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EaseAnimation学习"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/studyDragr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DragGridView学习"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/studyViewDragHelper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ViewDragHelper学习"
            android:textAllCaps="false" />
    </LinearLayout>
</ScrollView>

